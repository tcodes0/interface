set -euo pipefail
shopt -s globstar
trap 'err $LINENO' ERR

### vars and functions ###

create_snaps() {
  local now flags
  now="$(date +%Y-%m-%d-%H)"
  # read-only
  flags=(-r)

  for target in "$@"; do
    btrfs subvolume snapshot "${flags[@]}" "/toplevel/$target" "/toplevel/$target-$now-ro"
  done

  loginfo $LINENO "created snapshots at $now"
}

trim_old() {
  local old_snaps max=50

  for target in "$@"; do
    # shellcheck disable=SC2207
    old_snaps=($(find /toplevel -maxdepth 1 -name "${target}*-ro" | sort | head -${max}))

    if [ "${#old_snaps[@]}" -le "$max" ]; then
      return
    fi

    btrfs subvolume delete "${old_snaps[0]}"
    loginfo $LINENO "deleted ${old_snaps[0]}"
  done
}

### script ###

create_snaps @root @vacation
trim_old @root @vacation
