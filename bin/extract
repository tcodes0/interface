set -euo pipefail
shopt -s globstar
trap 'err $LINENO' ERR

### vars and functions ###

help() {
  if [ ! "$1" ] || requested_help; then
    msgln "Usage:
          supports dozens of popular archive extensions

          extract <path/file_name.ext>
          extract <path/file_name_1.ext> [path/file_name_2.ext] [path/file_name_3.ext]"
    exit
  fi
}

_rar() {
  if command -v unrar-free >/dev/null; then
    unrar-free x -ad ../"$1"
  else
    unrar x -ad ../"$1"
  fi
}

extract() {
  for file in "$@"; do
    if [ ! -f "$file" ]; then
      log $LINENO "'$file' not found"
      continue
    fi

    local dir="${file/.*/}"
    mkdir -p "$dir"
    cd "$dir"

    case "${file%,}" in
    *.tar.bz2 | *.tar.gz | *.tar.xz | *.tbz2 | *.tgz | *.txz | *.tar)
      tar xvf "../$file"
      ;;
    *.lzma) unlzma ../"$file" ;;
    *.bz2) bunzip2 ../"$file" ;;
    *.rar) _rar "$file" ;;
    *.gz) gunzip ../"$file" ;;
    *.zip) unzip ../"$file" ;;
    *.z) uncompress ../"$file" ;;
    *.7z | *.arj | *.cab | *.chm | *.deb | *.dmg | *.iso | *.lzh | *.msi | *.rpm | *.udf | *.wim | *.xar)
      7z x ../"$file"
      ;;
    *.xz) unxz ../"$file" ;;
    *.exe) cabextract ../"$file" ;;
    *.cpio) cpio -id <../"$file" ;;
    *)
      cd ..
      fatal $LINENO "'$file' unknown archive method"
      ;;
    esac

    printf "extracted to %s\n" "$dir"
  done

  cd ..
}

### script ###

SAVED_IFS=$IFS
IFS=$(echo -en "\n\b")

help "$1"
extract "$@"

IFS=$SAVED_IFS
