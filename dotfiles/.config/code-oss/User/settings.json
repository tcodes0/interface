{
  //
  // - - - - - - - - THEME - - - - - - - - -
  //
  "workbench.colorTheme": "Material Theme Darker High Contrast",
  "workbench.colorCustomizations": {
    "[Material Theme Darker High Contrast]": {
      "editor.background": "#050505",
      "activityBar.background": "#050505",
      "statusBar.background": "#050505",
      "panel.background": "#050505",
      "sideBar.background": "#050505",
      "activityBarBadge.background": "#050505",
      "badge.background": "#050505",
      "editorPane.background": "#050505",
      "editorWidget.background": "#050505",
      "tab.inactiveBackground": "#050505",
      "tab.activeBackground": "#050505",
      "titleBar.activeBackground": "#050505",
      "editorGutter.background": "#050505"
    },
    "activityBarBadge.background": "#FF4081",
    "list.activeSelectionForeground": "#FF4081",
    "list.inactiveSelectionForeground": "#FF4081",
    "list.highlightForeground": "#FF4081",
    "scrollbarSlider.activeBackground": "#FF408150",
    "editorSuggestWidget.highlightForeground": "#FF4081",
    "textLink.foreground": "#FF4081",
    "progressBar.background": "#FF4081",
    "pickerGroup.foreground": "#FF4081",
    "tab.activeBorder": "#FF4081",
    "notificationLink.foreground": "#FF4081",
    "editorWidget.resizeBorder": "#FF4081",
    "editorWidget.border": "#FF4081",
    "settings.modifiedItemIndicator": "#FF4081",
    "settings.headerForeground": "#FF4081",
    "panelTitle.activeBorder": "#FF4081",
    "breadcrumb.activeSelectionForeground": "#FF4081",
    "menu.selectionForeground": "#FF4081",
    "menubar.selectionForeground": "#FF4081"
  },
  "editor.tokenColorCustomizations": {
    "[Material Theme Darker High Contrast]": {
      "comments": "#676767",
      "functions": "#7e7fdd",
      "strings": "#8b907f",
      "keywords": "#c5ad97",
      "types": "#6abe7f"
    }
  },
  "materialTheme.accent": "Pink",
  //
  // - - - - - - - - FONT - - - - - - - - -
  //
  "markdown.preview.fontSize": 12,
  "editor.fontLigatures": true,
  "terminal.integrated.fontWeightBold": "300",
  "terminal.integrated.fontFamily": "Furacode nerd font",
  "terminal.integrated.lineHeight": 1.35,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.splitCwd": "inherited",
  "editor.fontFamily": "PragmataPro Liga",
  "editor.fontWeight": "normal",
  "editor.lineHeight": 21,
  "editor.fontSize": 14,
  //
  // - - - - - - - - FORMATTER & LINTER - - - - - - - - -
  //
  "eslint.run": "onType",
  "eslint.options": {
    "resolvePluginsRelativeTo": "."
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "sql-formatter.uppercase": true,
  //
  // - - - - - - - - GIT - - - - - - - - -
  //
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.untrackedChanges": "separate",
  "git.openRepositoryInParentFolders": "always",
  //
  // - - - - - - - - BASH - - - - - - - - -
  //
  "shellformat.path": "/usr/local/bin/shfmt",
  "shellformat.flag": "-i 2 -ln bash",
  "shellcheck.customArgs": ["-x"],
  //
  // - - - - - - - - JS/TS - - - - - - - - -
  //
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  //
  // - - - - - - - - GO - - - - - - - - -
  //
  "go.useLanguageServer": true,
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "go.testOnSave": false,
  "go.delveConfig": {
    "debugAdapter": "dlv-dap"
  },
  "go.testEnvFile": "${workspaceFolder}/.env",
  "go.testFlags": ["-race"],
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--print-issued-lines=false"],
  "go.vetOnSave": "off",
  "go.formatTool": "gofumpt",
  "gopls": {
    "ui.semanticTokens": true
  },
  "go.toolsManagement.autoUpdate": true,
  //
  // - - - - - - - - MISC - - - - - - - - -
  //
  "macros": {},
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.external.osxExec": "iTerm2.app",
  "terminal.integrated.cursorStyle": "line",
  "workbench.settings.editor": "json",
  "workbench.statusBar.visible": true,
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "hidden",
  "editor.multiCursorModifier": "alt",
  "editor.renderWhitespace": "all",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.renderControlCharacters": true,
  "editor.minimap.enabled": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 5,
  "editor.mouseWheelScrollSensitivity": 3,
  "editor.suggestSelection": "first",
  "editor.foldingImportsByDefault": true,
  "editor.inlineSuggest.enabled": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.hotExit": "onExitAndWindowClose",
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",
  "emmet.showAbbreviationSuggestions": false,
  "emmet.showExpandedAbbreviation": "never",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "githubPullRequests.queries": [
    { "label": "Waiting", "query": "is:open review-requested:${user}" },
    { "label": "Open", "query": "is:open" },
    { "label": "Assigned", "query": "is:open assignee:${user}" },
    { "label": "Created", "query": "is:open author:${user}" }
  ],
  "githubPullRequests.fileListLayout": "flat",
  "githubPullRequests.pullBranch": "never",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false
  },
  "cSpell.userWords": [
    "AIAPI",
    "aiplugin",
    "aiplugins",
    "apperrs",
    "Appt",
    "appts",
    "athenahealth",
    "baristai",
    "btrfs",
    "chakra",
    "cliflag",
    "clioptions",
    "commonclock",
    "comms",
    "configkey",
    "davinci",
    "devs",
    "doesnt",
    "dotfiles",
    "eleanorhealth",
    "entityid",
    "envtag",
    "errgroup",
    "featureflag",
    "Frameset",
    "frontends",
    "hlog",
    "httpflush",
    "httphandler",
    "httphandlertest",
    "httprecoverer",
    "idgen",
    "idgenerator",
    "iname",
    "jmap",
    "jsonutil",
    "Laper",
    "libopenai",
    "lostcancel",
    "macbook",
    "Moderations",
    "Msgf",
    "nolint",
    "nower",
    "nullzero",
    "OPENAI",
    "pgstore",
    "productevents",
    "reflectutil",
    "resthandler",
    "resttool",
    "samber",
    "Schedulable",
    "Storer",
    "struct",
    "styleguide",
    "tanstack",
    "tcodes",
    "Telehealth",
    "Thom",
    "Thomazella",
    "typecheck",
    "unfollow",
    "unmarshalled",
    "unmarshalling",
    "Unnotified",
    "vamac",
    "Wrapf",
    "zerolog"
  ],
  "cSpell.maxDuplicateProblems": 2,
  "cSpell.showAutocompleteSuggestions": false,
  "cSpell.spellCheckDelayMs": 2000,
  "cSpell.maxNumberOfProblems": 5,
  "window.commandCenter": false,
  "window.menuBarVisibility": "hidden",
  "window.enableMenuBarMnemonics": false,
  // OTHERS
  "merge-conflict.diffViewPosition": "Below",
  "diffEditor.ignoreTrimWhitespace": false,
  "debug.allowBreakpointsEverywhere": true,
  "outline.collapseItems": "alwaysCollapse",
  "update.mode": "manual",
  "redhat.telemetry.enabled": true,
  "security.workspace.trust.untrustedFiles": "open"
}
